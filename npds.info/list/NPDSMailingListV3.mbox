	// On cycle parmi les entrées.
	local frame entrée := curseur:entry();
	while( entrée ) do
	begin
		// On l'ajoute.
		addarrayslot(entrées, entrée);
		// Au suivant!
		entrée := curseur:next();
	end;

	// 2-Extraction des plus récents.
	// Je ne vais quand même pas trier à la main, non?
	entrées:= sort(entrées, '|>|, 'timestamp);

