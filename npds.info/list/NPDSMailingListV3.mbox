			// Et hop, un élément de plus dans la liste.
			theResult := theResult & "	<li><a 
href=\"/html/" & NumberStr(EntryStore(entrée).signature) & "$" & 
NumberStr(entrée._uniqueID) & ".nsd\">" & titre & "</a>\n";
		end;
		// Fin de la liste.
		theResult := theResult & "</ul>";
	end;
end

