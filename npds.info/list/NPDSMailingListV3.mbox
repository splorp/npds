		theResult := "<p><b>Most recent posts:</b></p>\n<ul>\n";
		// Je peux en avoir moins de 3.
		local int count := 2;
		if (len < 3) then count := len - 1;
		for index_p := 0 to count do
		begin
			// Je récupère l'entrée.
			entrée := entrées[ index_p ];
			// J'ai besoin de son titre.
			local string titre := entrée.title;
			// Si le visiteur a été flemmard, il faut générer
